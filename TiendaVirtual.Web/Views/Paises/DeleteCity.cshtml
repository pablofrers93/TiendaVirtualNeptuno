@model TiendaVirtual.Web.ViewModels.Ciudad.CiudadEditVm

@{
    ViewBag.Title = "DeleteCity";
}

<h2>Borrar Ciudad</h2>

<h3>¿Está seguro/a que desea borar la siguiente ciudad?</h3>
<div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NombreCiudad)
        </dt>

        <dd>
            @Html.TextBoxFor(model => model.NombreCiudad, new { @class = "form-control", @disabled = "disabled" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PaisId)
        </dt>

        <dd>
            @Html.DropDownListFor(model => model.PaisId, Model.Paises, "", new { @class = "form-select", @disabled = "disabled" })
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-danger" /> |
            @Html.ActionLink("Volver", $"Details/{Model.PaisId}", null, new { @class = "btn btn-success" })
        </div>
    }
</div>
