@model IEnumerable<TiendaVirtual.Entidades.Entidades.Pais>
@{
    ViewBag.Title = "Index";
}

<h2>Lista de Paises</h2>

<table class="table table-dark table-bordered table-hover">
    <thead>
        <tr>
            <th>Pais</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var pais in Model)
            {
                <tr>
                    <td>
                        @pais.NombrePais
                    </td>
                </tr>
            }
        }
        else 
        {
           <tr>
               <td>No se han agregado paises todavía</td>
           </tr>  
        }


    </tbody>
</table>

